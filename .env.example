# Project
PROJECT_NAME=danux
ENVIRONMENT=development
LOG_LEVEL=INFO

# API
API_PORT=8000
API_HOST=0.0.0.0

# Worker
WORKER_CONCURRENCY=1
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_BASE_SECONDS=1
WORKER_BACKOFF_MAX_SECONDS=30

# Database (Postgres)
POSTGRES_DB=danux
POSTGRES_USER=danux
POSTGRES_PASSWORD=change_me_local_dev_only
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://danux:change_me_local_dev_only@postgres:5432/danux

# Queue (Redis)
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Security
# 32+ bytes recommended. Do not commit real secrets.
APP_ENCRYPTION_KEY=replace_with_32_plus_bytes_random_key

# Docker compose project isolation
COMPOSE_PROJECT_NAME=danux
